# Ethereum MCP Server Configuration
# Copy this file to .env and update with your values

# Ethereum RPC endpoint (required)
# For local development: http://localhost:8545
# For mainnet: https://mainnet.infura.io/v3/YOUR_PROJECT_ID
# For testnet: https://goerli.infura.io/v3/YOUR_PROJECT_ID
ETH_RPC_URL=http://localhost:8545

# Chain ID (optional - will be auto-detected if not specified)
# 1 = Mainnet, 5 = Goerli, 11155111 = Sepolia, 31337 = Hardhat
# CHAIN_ID=1

# Logging configuration (optional)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Server configuration (optional)
# HOST=0.0.0.0
# PORT=8000

# Security settings (optional)
# Maximum number of wallets to manage
# MAX_WALLETS=100

# Gas price strategy (optional)
# Options: fast, medium, slow, custom
# GAS_PRICE_STRATEGY=medium

# Custom gas price in Gwei (only used if GAS_PRICE_STRATEGY=custom)
# CUSTOM_GAS_PRICE=20

# Transaction timeout in seconds (optional)
# TX_TIMEOUT=300

# Enable WebSocket monitoring (optional)
# ENABLE_WS_MONITORING=true

# Development mode (optional)
# Enables additional debugging features
# DEV_MODE=false